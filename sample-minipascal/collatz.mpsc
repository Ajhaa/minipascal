program Collatz;

function Calculate (number : integer, count : integer) : integer;
begin
    if number = 1 then return count;

    var next : integer;

    if number % 2 = 0 then return Calculate(number / 2, count + 1)
    else return Calculate(number * 3 + 1, count + 1);
    return 0 - 1;
end;

begin
    var i : integer;
    i := 1;
    while i < 20 do begin
        write(Calculate(i, 0));
        i := i + 1;
    end;
end.
